    <script>
        $(window).on('load', function () {
            if (feather) {
                feather.replace({
                    width: 14,
                    height: 14
                });
            }

        })

        function showSpinner() {
            const spinner = document.getElementById('spinnerPrimary');
            if (spinner) {
                spinner.style.display = 'block'; // Hiển thị spinner
            }
        }

        // Hàm ẩn spinner
        function hideSpinner() {
            const spinner = document.getElementById('spinnerPrimary');
            if (spinner) {
                spinner.style.display = 'none'; // Ẩn spinner
            }
        }
        document.addEventListener("DOMContentLoaded", function () {
            const screenWidth = window.screen.width;
            const screenHeight = window.screen.height;

            // Màn hình 19 inch phổ biến: 1366x768, 1440x900, 1600x900
            const is19Inch =
                (screenWidth === 1366 && screenHeight === 768) ||
                (screenWidth === 1440 && screenHeight === 900) ||
                (screenWidth === 1600 && screenHeight === 900) ||
                (screenWidth === 1536);

            if (is19Inch) {
                document.body.classList.add("zoomed");
            }
        });

        $(document).ajaxError(function (event, xhr, settings, thrownError) {
            if (xhr.status === 401) {
                // Redirect luôn sang trang login
                window.location.href = "/Account/Login";
            }
        });
