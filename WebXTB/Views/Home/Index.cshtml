@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    @Styles.Render("~/app-assets/css/pages-news/index.css")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wordcloud2.js/1.2.2/wordcloud2.min.js"></script>
</head>
<body>
    <div class="row">
        <!-- Upload File Card starts -->
        <div class="col-lg-4 col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header" style="justify-content:center">
                    <div class="text-center">
                        <h4 class="card-title bold" style="font-weight:600">All Targets</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div id="donut-chart"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-sm-6 col-sm-12">
            <div class="card">
                <div class="card-header" style="justify-content:center">
                    <div class="text-center">
                        <h4 class="card-title bold" style="font-weight:600">Anti-VietNam news in week</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div id="column-chart"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-sm-6 col-sm-12">
            <div class="card">
                <div class="card-header" style="justify-content:center">
                    <div class="text-center">
                        <h4 class="card-title bold" style="font-weight:600">Top outstanding target in week</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div id="bar-chart"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Upload File Card starts -->
        <div class="col-lg-8 col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header" style="justify-content:center">
                    <div class="text-center">
                        <h4 class="card-title bold" style="font-weight:600">Top news</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div id="newsContainer"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-sm-6 col-12">
            <div class="card">
                <div class="card-header" style="justify-content:center">
                    <h4 class="card-title bold" style="font-weight:600">Hotkey Today</h4>
                </div>
                <div class="card-body text-center">
                    <div id="tagCloudContainer" style="width:100%;height:330px;"></div>
                </div>
            </div>
        </div>
      
    </div>
    <!-- BEGIN: Page JS-->
    @Scripts.Render("~/app-assets/js/pages-news/index.js")

    <!-- END: Page JS-->

</body>
</html>